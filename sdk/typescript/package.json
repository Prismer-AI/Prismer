{
  "name": "@prismer/sdk",
  "version": "0.1.0",
  "description": "Official TypeScript SDK for Prismer Cloud API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "prismer",
    "ai",
    "context",
    "sdk",
    "api"
  ],
  "author": "Prismer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/prismer-io/prismer-sdk-ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
